<!DOCTYPE html>
<html>
<head>
  <title><%= base_title(yield(:title)) %></title>
  <%= favicon_link_tag 'favicon.ico' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'layouts/header' %>
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %>
    </div>
  <% end %>
    <%= yield %>
  <%= debug(params) if Rails.env.development? %>
  <%= render 'layouts/footer' %>
  <%= render 'layouts/ie9_fix' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script>
    setTimeout(function() {
      // Do something after 10 seconds
      $('.alert-info').fadeOut('slow');
    }, 10000);

    var module = document.getElementById("clamp-this-module");
    var module2 = document.getElementById("clamp-this-module2");
    var module3 = document.getElementById("clamp-this-module3");

$clamp(module, {clamp: 3});
$clamp(module2, {clamp: 3});
$clamp(module3, {clamp: 3});
  </script>
</body>
</html>
