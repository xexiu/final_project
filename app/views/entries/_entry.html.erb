<li style="position: relative" class="entry-<%= entry.id %> bind">
<%= link_to entry_path(entry.id), class: 'tab-block-entry' do %>
      <%= image_tag(entry.img(:small), class: 'tab-img-entry') %>
      <h5 class="title-entry"><%= entry.title %>
      </h5>
      <span class="timestamp">
        Posted <%= time_ago_in_words(entry.created_at) %> ago.
      </span>
      <p class="mini-desc-entry"><%= entry.content %></p>
      <% if current_user.admin? %>
        <%= link_to entry, method: :delete do %>
        <span class="delete-entry" data-toggle="tooltip" data-placement="left" title="Delete this entry">x</span>
        <% end %>
      <% end %>
<% end %>
</li>