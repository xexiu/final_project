<% provide(:title, "Log in") %>
<header class="signin"><h1>Sign In</h1></header>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, :html => { :class => 'form-sign' }, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Log in" %>
    <% end %>

    <div style="margin-left: 30px"><p>New user? <%= link_to "Sign up now!", signup_path %></p></div>
  </div>
</div>