<% provide(:title, "Sign in") %>
<header class="signin"><h1>Sign In</h1></header>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, :html => { :class => 'form-sign' }, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= link_to "(Forgot password?)", new_password_reset_path, class: 'fr', style: 'margin-right: 38px' %>
      <%= f.password_field :password %>

      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me, { checked: true } %>
        <span>Remember me on this computer</span>
      <% end %>

      <%= f.submit "Log in" %>
    <% end %>

    <div style="margin-left: 30px"><p>New user? <%= link_to "Sign up now!", signup_path %></p></div>
  </div>
</div>